#!/bin/bash
#elaborado por sinfallas
source /usr/local/bin/variables
if yad --skip-taskbar --title="ADVERTENCIA" --center --text-align=fill --borders=6 --text="Este script solo debe ejecutarse después de realizar una instalación del sistema operativo; si lo ejecuta en modo LIVE puede hacer que su sistema sea inestable."; then
	echo 1 > /dev/null
else
	exit 1
fi	

optimizacion_1

file=$(yad --fixed --center --width=360 --height=420 --no-click --list --title="Post-instalación" --column=Acciones "Instalar KDE" "Instalar GNOME" "Instalar XFCE" "Instalar ENLIGHTENMENT" "Instalar CINNAMON" "Instalar WINE" "Instalar XBMC" "Instalar driver ATI" "Instalar driver NVIDIA" "Instalar kernel LIQUORIX" "Instalar ICEDOVE")

if [ "$file" = "Instalar KDE|" ]; then
	if yad --skip-taskbar --title="ADVERTENCIA" --center --text-align=fill --borders=6 --text="Debe tener un equipo con 2 Gb de RAM o mas ¿Esta seguro de querer instalar este software?"; then
		kde_1 | progress_2
	else
		source $0
	fi	
	source $0

elif [ "$file" = "Instalar GNOME|" ]; then
	if yad --skip-taskbar --title="ADVERTENCIA" --center --text-align=fill --borders=6 --text="Debe tener un equipo con 2 Gb de RAM o mas ¿Esta seguro de querer instalar este software?"; then
		gnome_1 | progress_2
	else
		source $0
	fi	
	source $0

elif [ "$file" = "Instalar XFCE|" ]; then
	if yad --skip-taskbar --title="ADVERTENCIA" --center --text-align=fill --borders=6 --text="Debe tener un equipo con 1 Gb de RAM o mas ¿Esta seguro de querer instalar este software?"; then
		xfce_1 | progress_2
	else
		source $0
	fi	
	source $0

elif [ "$file" = "Instalar ENLIGHTENMENT|" ]; then
	if yad --skip-taskbar --title="ADVERTENCIA" --center --text-align=fill --borders=6 --text="Debe tener un equipo con 1 Gb de RAM o mas ¿Esta seguro de querer instalar este software?"; then
		e17_1 | progress_2
	else
		source $0
	fi	
	source $0

elif [ "$file" = "Instalar CINNAMON|" ]; then
	if yad --skip-taskbar --title="ADVERTENCIA" --center --text-align=fill --borders=6 --text="Debe tener un equipo con 2 Gb de RAM o mas ¿Esta seguro de querer instalar este software?"; then
		cinnamon_1 | progress_2
	else
		source $0
	fi	
	source $0

elif [ "$file" = "Instalar WINE|" ]; then
	if yad --skip-taskbar --title="ADVERTENCIA" --center --text-align=fill --borders=6 --text="Debe tener un equipo con 2 Gb de RAM o mas ¿Esta seguro de querer instalar este software?"; then
		wine_1 | progress_2
	else
		source $0
	fi	
	source $0

elif [ "$file" = "Instalar XBMC|" ]; then
	if yad --skip-taskbar --title="ADVERTENCIA" --center --text-align=fill --borders=6 --text="Debe tener un equipo con 2 Gb de RAM o mas ¿Esta seguro de querer instalar este software?"; then
		xbmc_1 | progress_2
	else
		source $0
	fi	
	source $0

elif [ "$file" = "Instalar driver ATI|" ]; then
	if yad --skip-taskbar --title="ADVERTENCIA" --center --text-align=fill --borders=6 --text="¿Esta seguro de querer instalar este software?"; then
		ati_1 | progress_2
	else
		source $0
	fi	
	source $0	

elif [ "$file" = "Instalar driver NVIDIA|" ]; then
	if yad --skip-taskbar --title="ADVERTENCIA" --center --text-align=fill --borders=6 --text="¿Esta seguro de querer instalar este software?"; then
		nvidia_1 | progress_2
	else
		source $0
	fi	
	source $0	

elif [ "$file" = "Instalar kernel LIQUORIX|" ]; then
	if yad --skip-taskbar --title="ADVERTENCIA" --center --text-align=fill --borders=6 --text="¿Esta seguro de querer instalar este software?"; then
		liquorix_1 | progress_2
	else
		source $0
	fi	
	source $0

elif [ "$file" = "Instalar ICEDOVE|" ]; then
	if yad --skip-taskbar --title="ADVERTENCIA" --center --text-align=fill --borders=6 --text="¿Esta seguro de querer instalar este software?"; then
		icedove_1 | progress_2
	else
		source $0
	fi	
	source $0

else
exit 0

fi
exit 0
