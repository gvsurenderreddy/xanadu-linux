#!/bin/bash
#elaborado por sinfallas
source /usr/local/bin/variables

if ! [[ -d /lib/live/mount/medium ]] ; then
	echo 1 > /dev/null
else
	echo "Este programa no se puede ejecutar en modo live."
	exit 1
fi

case "$1" in
	start)
		apt-get -y purge lightdm lxde lxappearance lxappearance-obconf lxde-common lxde-core lxde-icon-theme lxinput lxlauncher lxmenu-data lxmusic lxpanel lxrandr lxsession lxshortcut lxtask lxterminal brasero vlc xsane w32codecs iceweasel pidgin filezilla libreoffice xorg x11-session-utils wireshark thunar gksu fdpowermon disk-manager clamtk synaptic gparted compton evince yad zenity
		apt-get -y --force-yes autoremove
		apt-get -y purge $(deborphan)
		apt-get clean
		apt-get -y install ssh
		optimizacion_1
		reboot
		;;

	*)
		echo "Al iniciar este modo se eliminaran todos los programas que utilizan interfaz grafica"
		echo "USO: $0 start"
		exit 0
		;;
exit 0
