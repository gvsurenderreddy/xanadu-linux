#!/bin/bash
#elaborado por sinfallas
source /usr/local/bin/variables

if ! [[ -d /lib/live/mount/rootfs ]] ; then
	optimizacion_1
else
	zenity --timeout=3 --error --text="Este programa no se puede ejecutar en modo live."
	exit 1
fi
echo $BASHPID > /run/post-gui-zen.pid
file=$(zenity --width=360 --height=420 --list --title Post-instalacion --column Acciones "Instalar Recomendados" "Instalar KDE" "Instalar GNOME" "Instalar XFCE" "Instalar ENLIGHTENMENT" "Instalar CINNAMON" "Instalar WINE" "Instalar XBMC" "Instalar driver ATI" "Instalar driver NVIDIA" "Instalar kernel LIQUORIX" "Instalar ICEDOVE" & echo "$!" > /run/post.pid)

if [ "$file" = "Instalar KDE" ]; then
	if (( $memoria > 2048000 )); then
		if zenity --question --text="¿Esta seguro de querer instalar este software?" & echo "$!" > /run/post-sub.pid; then
			kde_1 | progress_1
			limpiar_1 | progress_limpiar_1
		else
			source $0
		fi
	else
		zenity --timeout=3 --error --text="Debe tener un equipo con 2 Gb de RAM o mas para instalar este software."
	fi	
	source $0

elif [ "$file" = "Instalar GNOME" ]; then
	if (( $memoria > 2048000 )); then
		if zenity --question --text="¿Esta seguro de querer instalar este software?" & echo "$!" > /run/post-sub.pid; then
			gnome_1 | progress_1
			limpiar_1 | progress_limpiar_1
		else
			source $0
		fi
	else
		zenity --timeout=3 --error --text="Debe tener un equipo con 2 Gb de RAM o mas para instalar este software."
	fi		
	source $0

elif [ "$file" = "Instalar XFCE" ]; then
	if zenity --question --text="¿Esta seguro de querer instalar este software?" & echo "$!" > /run/post-sub.pid; then
		xfce_1 | progress_1
		limpiar_1 | progress_limpiar_1
	else
		source $0
	fi	
	source $0

elif [ "$file" = "Instalar ENLIGHTENMENT" ]; then
	if zenity --question --text="¿Esta seguro de querer instalar este software?" & echo "$!" > /run/post-sub.pid; then
		e17_1 | progress_1
		limpiar_1 | progress_limpiar_1
	else
		source $0
	fi	
	source $0

elif [ "$file" = "Instalar CINNAMON" ]; then
	if (( $memoria > 2048000 )); then
		if zenity --question --text="¿Esta seguro de querer instalar este software?" & echo "$!" > /run/post-sub.pid; then
			cinnamon_1 | progress_1
			limpiar_1 | progress_limpiar_1
		else
			source $0
		fi
	else
		zenity --timeout=3 --error --text="Debe tener un equipo con 2 Gb de RAM o mas para instalar este software."
	fi
	source $0

elif [ "$file" = "Instalar WINE" ]; then
	if (( $memoria > 2048000 )); then
		if zenity --question --text="¿Esta seguro de querer instalar este software?" & echo "$!" > /run/post-sub.pid; then
			wine_1 | progress_1
			limpiar_1 | progress_limpiar_1
		else
			source $0
		fi
	else
		zenity --timeout=3 --error --text="Debe tener un equipo con 2 Gb de RAM o mas para instalar este software."
	fi	
	source $0

elif [ "$file" = "Instalar XBMC" ]; then
	if (( $memoria > 2048000 )); then
		if zenity --question --text="¿Esta seguro de querer instalar este software?" & echo "$!" > /run/post-sub.pid; then
			xbmc_1 | progress_1
			limpiar_1 | progress_limpiar_1
		else
			source $0
		fi
	else
		zenity --timeout=3 --error --text="Debe tener un equipo con 2 Gb de RAM o mas para instalar este software."
	fi	
	source $0

elif [ "$file" = "Instalar driver ATI" ]; then
	if zenity --question --text="¿Esta seguro de querer instalar este software?" & echo "$!" > /run/post-sub.pid; then
		ati_1 | progress_1
		limpiar_1 | progress_limpiar_1
	else
		source $0
	fi	
	source $0	

elif [ "$file" = "Instalar driver NVIDIA" ]; then
	if zenity --question --text="¿Esta seguro de querer instalar este software?" & echo "$!" > /run/post-sub.pid; then
		nvidia_1 | progress_1
		limpiar_1 | progress_limpiar_1
	else
		source $0
	fi	
	source $0	

elif [ "$file" = "Instalar kernel LIQUORIX" ]; then
	if zenity --question --text="¿Esta seguro de querer instalar este software?" & echo "$!" > /run/post-sub.pid; then
		liquorix_1 | progress_1
		limpiar_1 | progress_limpiar_1
	else
		source $0
	fi	
	source $0	

elif [ "$file" = "Instalar ICEDOVE" ]; then
	if zenity --question --text="¿Esta seguro de querer instalar este software?" & echo "$!" > /run/post-sub.pid; then
		icedove_1 | progress_1
		limpiar_1 | progress_limpiar_1
	else
		source $0
	fi	
	source $0	

elif [ "$file" = "Instalar Recomendados" ]; then
	if zenity --question --text="¿Esta seguro de querer instalar este software?" & echo "$!" > /run/post-sub.pid; then
		apparmor_1 | progress_1
		limpiar_1 | progress_limpiar_1
	else
		source $0
	fi	
	source $0	

else
rm -f /run/post-sub.pid
rm -f /run/post.pid
rm -f /run/post-gui-zen.pid
exit 0

fi
rm -f /run/post-sub.pid
rm -f /run/post.pid
rm -f /run/post-gui-zen.pid
exit 0
