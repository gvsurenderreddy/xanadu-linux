#!/bin/bash
#elaborado por sinfallas
sudo rmmod -f ip_tables ip6_tables iptable_filter iptable_mangle iptable_nat iptable_raw bluetooth rfcomm
archiver="/home/user/.config/xarchiver/xarchiverrc"
if [[ -f $archiver ]]; then
	echo 1 > /dev/null
else
	mkdir -p /home/user/.config/xarchiver/
	cp /usr/local/bin/xarchiverrc /home/user/.config/xarchiver/xarchiverrc
fi
sleep 1s
pcmanfm -w "$(find /usr/share/images/desktop-base/random -type f | shuf -n1)"
exit 0
