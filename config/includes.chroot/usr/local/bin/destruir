#!/bin/bash
# elaborado por sinfallas
if [[ $USER != root ]]; then
echo -e "\e[00;31mERROR: DEBES SER ROOT\e[00m"
exit 1
fi
echo $BASHPID > /run/destruir.pid
miswap=$(fdisk -l | grep swap | cut -c 1-9)
miswap2=$(blkid -o export $miswap | grep UUID)
dispositivo2=$(df / --output=source | tail -n1 | cut -c 19-54)
dispositivo=$(blkid -U $dispositivo2 | cut -c 1-8)
mv -f /etc/memlockd.cfg /etc/memlockd.cfg.old
mv -f /etc/memlockd.cfg.des /etc/memlockd.cfg
systemctl start memlockd
history -c
sfill -f $dispositivo &
sdmem -f &
sswap -f $miswap
rm -f /run/destruir.pid
exit 0
